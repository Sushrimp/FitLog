<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/profilePictureContainer_Profile"
        android:layout_width="200sp"
        android:layout_height="200sp"

        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"

        app:cardCornerRadius="10sp">
        <ImageView
            android:id="@+id/profilePicture_Profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/profilePictureContainer_Profile"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/poppins_bold"
        android:text="name"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/username_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="-15sp"
        android:layout_below="@id/name_Profile"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/poppins_medium"
        android:text="username"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="50sp"
        android:layout_below="@id/username_Profile"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/poppins_medium"
        android:text="email"
        android:textAlignment="center"
        android:textSize="17.5sp" />

    <TextView
        android:id="@+id/gender_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:layout_below="@id/email_Profile"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/poppins_medium"
        android:text="gender"
        android:textAlignment="center"
        android:textSize="17.5sp" />

    <TextView
        android:id="@+id/age_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:layout_below="@id/gender_Profile"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/poppins_medium"
        android:text="Age : -1"
        android:textAlignment="center"
        android:textSize="17.5sp" />



    <LinearLayout
        android:layout_below="@id/age_Profile"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="325dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/editProfile_Profile"

            android:layout_centerHorizontal="true"
            android:layout_marginRight="25dp"

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/changePassword_Profile"

            android:layout_centerHorizontal="true"

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Change Password" />


    </LinearLayout>

    <Button
        android:id="@+id/signOut_Profile"
        android:layout_below="@id/age_Profile"

        android:layout_marginTop="100dp"

        android:layout_centerHorizontal="true"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sign Out" />

</RelativeLayout>